{% extends "TKCoreBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Cours
{% endblock %}

{% block body %}


    <div class="container-fluid" style="background: #e3e3e3; margin-top: 0px">


        {% include "TKCoursBundle:Theme:submenu.html.twig" %}

        {% for message in app.session.flashbag.get('notice') %}
            {% include "TKCoreBundle::modal_ok.html.twig" %}
        {% endfor %}

        {% for message in app.session.flashbag.get('notice') %}
            {% include "TKCoreBundle::modal_ko.html.twig" %}
        {% endfor %}

        <div style="position: relative; display: inline-block;border:1px solid #CCC;background: #FFF;color:#666; width: 100% ; padding-top: 10px">

            <h3 class="text-primary text-center" >Ajouter un Théme</h3>
            <hr>

            <div class="center-block">

                {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}


                <div class="row">

                    <div class="form-group col-lg-6">

                        {{ form_label(form.libelle,"Libellé : ",{'label_attr' : {'class': 'col-lg-3'}}) }}

                        <div class="col-lg-9">
                            {{ form_widget(form.libelle,{'attr':{'class':'form-control','placeholder':'Libellé du théme'}}) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        <p class="text-center">
                            {{ form_widget(form.Enregistrer,{'attr':{'class':'btn btn-primary col-lg-6 col-lg-offset-3'}}) }}
                        </p>

                    </div>

                    <div class="col-lg-12 text-danger text-center">
                        {{ form_errors(form.libelle) }}
                    </div>

                    {{ form_rest(form) }}

                    {{ form_end(form) }}

                </div>


            </div>


        </div>

    </div>


{% endblock %}

