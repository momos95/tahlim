{% extends "TKCoreBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Cours PDF
{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row" style="margin-top: 10px">
            <div class="col-lg-4 text-left">
                <a class="" href="{{ path('tk_cours_homepage') }}"><i class="fa fa-backward"></i></a>
            </div>
            <div class="col-lg-offset-4 col-lg-4 text-center">
                <h3 class="text-primary text-right">{{ course.titre }}</h3>
            </div>
        </div>

        <object type="application/pdf" width="100%" height="100%" style="position: relative; display: inline-block; margin-top: 10px; height: 800px; background: transparent">
            <param name="src" value="{{ asset(url) }}" />

            <p>It appears your Web browser is not configured to display PDF files.
                No worries, just <a href="{{ asset(url) }}">click here to download the PDF file.</a>
            </p>

        </object>
    </div>



{% endblock %}