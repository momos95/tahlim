{% extends "TKCoreBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Cours
{% endblock %}

{% block body %}


    <div class="container-fluid" style="background: #e3e3e3; margin-top: 0px">


        {% include "TKCoursBundle:Cours:submenu.html.twig" %}

        {% for message in app.session.flashbag.get('notice') %}
            <div class="alert alert-dismissible alert-success col-sm-12 text-center">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong> {{ message }} </strong>
            </div>
        {% endfor %}

        <table class="table table-striped table-hover table-bordered" style="border:1px solid #CCC;background: #FFF;color:#666;">
            <thead>
            <tr style="color: black;">
                <th>#</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Format</th>
                <th>Accessibilit√©</th>
                <th>Date Ajout</th>
                <th class="text-center" colspan="3">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for cours in liste_cours %}
                <tr>
                    <td>{{ cours.idCours }}</td>
                    <td>{{ cours.nom }}</td>
                    <td>{{ cours.prenom }}</td>
                    <td>{{ cours.sexe.libGenre }}</td>
                    <td>{{ cours.email }}</td>
                    <td>{{ cours.role.libGrade }}</td>
                    <td class="text-center"><a style="cursor: pointer" href="{{ path('tk_cours_edit', { 'id' : cours.idCours}) }}" title="Modifier" class="text-info"><span class="fa fa-edit"></span></a></td>
                    <td class="text-center"><a style="cursor: pointer" href="{{ path('tk_cours_view', { 'id' : cours.idCours}) }}" title="Voir le pdf" class="text-info"><span class="fa fa-eye"></span></a></td>
                    <td class="text-center"><a style="cursor: pointer" data-toggle="modal" data-target="#supModal{{  cours.idCours }}"   title="Supprimer" class="text-danger"><span class="fa fa-remove"></span></a></td>
                </tr>
            {% else %}
                <tr><td colspan=7 class="text-center">Pas de cours.</td></tr>
            {% endfor %}

            </tbody>
        </table>


        {% include 'TKCoreBundle::pagination.html.twig' %}

    </div>


{% endblock %}

