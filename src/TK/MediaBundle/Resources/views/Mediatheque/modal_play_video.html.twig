<div id="playModal{{ media.id }}" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Regarder une vid√©o</h5>
                <button type="button" onclick="pause({{ media.id }})" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {%  set videoLink =  videosUrl ~ media.fichier %}
                <video id="video{{ media.id }}" width="100%" controls>
                    <source src="{{ asset(videoLink) }}" type="video/mp4">
                    Your browser does not support HTML5 video.
                </video>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal" onclick="pause({{ media.id }})">Fermer</button>
            </div>
        </div>

    </div>
</div>
<script>
    function pause(idMedia) {
        var myVideo = document.getElementById("video"+idMedia);
        if (!myVideo.paused)
            myVideo.pause();
    }
</script>