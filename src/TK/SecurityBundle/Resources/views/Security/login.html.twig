{% extends "TKCoreBundle::base.html.twig" %}

{% block title %}
    {{ parent() }} - Connexion
{% endblock %}

{% block body %}

    <div class="container">

        <br><br>
        <h1 class="text-center">{{ nom_site | upper}}</h1>
        <hr>

        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default" >
                <div class="panel-heading">
                    <div class="panel-title text-center">Accès à l'interface d'administration</div>
                </div>

                <div style="padding-top:30px" class="panel-body" >

                    {% if error %}
                        <div class="text-danger col-sm-12" style="text-align: center; font-size: 20px; font-weight: normal; margin-bottom: 20px">{{ error.message|trans({},'messages') }}<br></div>
                    {% endif %}

                    <form action="{{ path('login_check') }}" method="post"  id="loginform" class="form-horizontal" role="form">

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input id="username" type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Votre email." required>
                        </div>

                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input id="password" type="password" class="form-control" name="_password" placeholder="Votre mot de passe." required>
                        </div>


                        <div style="margin-top:10px" class="form-group">
                            <!-- Button -->

                            <div class="col-lg-12 controls">
                                <button class="btn btn-rounded btn-primary btn-block" type="submit">Connexion</button>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                    Problème de connexion ?
                                    <a href="">
                                        Récupérer mon compte
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>



                </div>
            </div>
        </div>

    </div>

{% endblock %}

