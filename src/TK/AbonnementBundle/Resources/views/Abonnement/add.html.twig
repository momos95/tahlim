{% extends "TKCoreBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Etudiants
{% endblock %}

{% block body %}


    <div class="container-fluid" style="background: #e3e3e3; margin-top: 0px">

        {% include "TKAbonnementBundle:Abonnement:submenu.html.twig" %}

        {% for message in app.session.flashbag.get('notice') %}
            {% include "TKCoreBundle::modal_ok.html.twig" %}
        {% endfor %}

        <div style="position: relative; display: inline-block;border:1px solid #CCC;background: #FFF;color:#666; width: 100% ; padding-top: 10px">

            <h3 class="text-primary text-center" >Créer un abonnement </h3>
            <hr>

            <div class="center-block">

                {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}


                <div class="row">

                    <div class="form-group col-lg-6">

                        {{ form_label(form.debut,"Date de début : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.debut,{'attr':{'class':'form-control' , 'id':'form_dateDebut'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.debut) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.fin,"Date de fin : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.fin,{'attr':{'class':'form-control' , 'id':'form_dateFin'}}) }}
                        </div>

                        <div class="col-lg-12 text-danger">
                            {{ form_errors(form.fin) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.type,"Type d'abonnement : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.type,{'attr':{'class':'form-control','placeholder':''}}) }}
                        </div>

                        <div class="col-lg-12 text-danger">
                            {{ form_errors(form.type) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.proprietaire,"Etudiant : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.proprietaire,{'attr':{'class':'form-control chosen-select '}}) }}
                        </div>

                        <div class="col-lg-12 text-danger">
                            {{ form_errors(form.proprietaire) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-12">

                        <p class="text-center">
                            {{ form_widget(form.Enregister,{'attr':{'class':'btn btn-primary col-lg-6 col-lg-offset-3'}}) }}
                        </p>

                    </div>

                    {{ form_rest(form) }}

                    {{ form_end(form) }}

                </div>
            </div>



        </div>

    </div>

    <script>

        jQuery(document).ready(function(){
            $('select.chosen-select').chosen();
        });
    </script>
{% endblock %}

