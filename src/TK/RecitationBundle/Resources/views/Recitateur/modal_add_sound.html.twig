<div id="addModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Ajouter une piste audio.</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                    <div class="center-block">

                        {{ form_start(formSound,{'attr' : {'class' : 'form-inline','id':'newSoundForm'}}) }}

                            {{ form_widget(formSound.titre,{'attr':{'class':'form-control mb-2 mr-sm-2 mb-sm-0','placeholder':'Titre de l\'audio'}}) }}

                            {{ form_widget(formSound.fichier,{'attr':{'class':'form-control mb-2 mr-sm-2 mb-sm-0','value':'Your label here.'}}) }}


                            {{ form_widget(formSound.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}

                            {{ form_rest(formSound) }}

                        {{ form_end(formSound) }}

                    </div>
                <div id="loadingSpinner" style="display: none;" class="container">
                    <div class="row">
                        <div id="loader">
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="dot"></div>
                            <div class="lading"></div>
                        </div>
                    </div>
                    <p class="text-center text-info"><i style="margin-top: 5px" class="fa fa-spinner fa-spin fa-3x fa-fw"></i> Chargement en cours</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>

    </div>
</div>


<script>
    $(document).on("click", "#tk_recitationbundle_sons_Ajouter", function(e){
        $('#loadingSpinner').show();
        document.getElementsByName("tk_recitationbundle_sons").submit();
    });
</script>
