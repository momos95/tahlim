{% extends "TKCoreBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Utilisateurs
{% endblock %}

{% block body %}


    <div class="container-fluid" style="background: #e3e3e3; margin-top: 0px">

        {% for message in app.session.flashbag.get('notice') %}
            <div class=" text-success text-center ">
                <br>
                <strong>{{ message }} <br></strong>.
            </div>
        {% endfor %}

        <div style="position: relative; display: inline-block;border:1px solid #CCC;background: #FFF;color:#666; width: 100% ; padding-top: 10px">

            <h3 class="text-primary text-center" >Profil</h3>
            <hr>

            <div class="center-block">

                {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}


                <div class="row">

                    <div class="form-group col-lg-6">

                        {{ form_label(form.email,"Email : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.email) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.mdp,"Mot de passe : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.mdp,{'attr':{'class':'form-control','placeholder':'Modifier mon mot de passe'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.mdp) }}
                        </div>

                    </div>


                    <div class="form-group col-lg-12">

                        {{ form_label(form.pays,"Pays : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.pays,{'attr':{'class':'form-control','placeholder':''}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.pays) }}
                        </div>

                    </div>


                    <div class="form-group col-lg-12">

                        <p class="text-center">
                            {{ form_widget(form.Enregister,{'attr':{'class':'btn btn-primary col-lg-6 col-lg-offset-3'}}) }}
                        </p>

                    </div>

                    {{ form_rest(form) }}

                    {{ form_end(form) }}

                </div>
                </div>



        </div>

    </div>


{% endblock %}

