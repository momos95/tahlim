{% extends "TKCoreBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Etudiant
{% endblock %}

{% block body %}


    <div class="container-fluid" style="background: #e3e3e3; margin-top: 0px">

        {% include "TKUtilisateurBundle:Etudiant:submenu.html.twig" %}

        {% for message in app.session.flashbag.get('notice') %}
            {% include "TKCoreBundle::modal_ok.html.twig" %}
        {% endfor %}

        <div style="position: relative; display: inline-block;border:1px solid #CCC;background: #FFF;color:#666; width: 100% ; padding-top: 10px">

            <h3 class="text-primary text-center" >Modification de données</h3>
            <hr>

            <div class="center-block">

                {{ form_start(form,{'attr' : {'class' : 'form-horizontal'}}) }}


                <div class="row">
                    <div class="form-group col-lg-6">

                        {{ form_label(form.nom,"Nom : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Nom de l\'étudiant'}}) }}
                        </div>

                        <div class="col-lg-12 text-danger">
                            {{ form_errors(form.nom) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.prenom,"Prénom : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Prénom de l\'étudiant'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.prenom) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.sexe,"Sexe : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.sexe,{'attr':{'class':'form-control'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.sexe) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.dateNaissance,"Date de Naissance : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.dateNaissance,{'attr':{'class':'form-control' , 'id':'form_dateNaissance'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.dateNaissance) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.email,"Email : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.email) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.mdp,"Mot de passe : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.mdp,{'attr':{'class':'form-control','placeholder':'Mot de passe', 'disabled':'true'}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.mdp) }}
                        </div>

                    </div>


                    <div class="form-group col-lg-6">

                        {{ form_label(form.role,"Rôle : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.role,{'attr':{'class':'form-control','placeholder':''}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.role) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-6">

                        {{ form_label(form.abonnementEtat,"Abonnement : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.abonnementEtat,{'attr':{'class':'form-control','placeholder':''}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.abonnementEtat) }}
                        </div>

                    </div>

                    <div class="form-group col-lg-12">

                        {{ form_label(form.pays,"Pays : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                        <div class="col-lg-12">
                            {{ form_widget(form.pays,{'attr':{'class':'form-control','placeholder':''}}) }}
                        </div>

                        <div class="col-lg-4 text-danger">
                            {{ form_errors(form.pays) }}
                        </div>

                    </div>


                    <div class="form-group col-lg-12">

                        <p class="text-center">
                            {{ form_widget(form.Enregister,{'attr':{'class':'btn btn-primary col-lg-6 col-lg-offset-3'}}) }}
                        </p>

                    </div>

                    {{ form_rest(form) }}

                    {{ form_end(form) }}

                </div>
                </div>



        </div>

    </div>


{% endblock %}

