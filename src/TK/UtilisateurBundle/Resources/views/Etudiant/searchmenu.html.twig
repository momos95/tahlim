<div class="card" style="position: relative; display: inline-block; width: 100%; margin-top: 5px; margin-bottom: 10px">
    <div class="card-header">
        <a data-toggle="collapse" href="#test-block" aria-expanded="true" aria-controls="test-block">
            Rechercher avec ou sans Filtre(s).
        </a>
    </div>


    <div id="test-block" class="collapse">
        <div class="card-body">
        {{ form_start(form,{'attr' : {'class' : 'form-horizontale'}}) }}

            <div class="row">

                <div class="form-group col-lg-6">

                    {{ form_label(form.nom,"Nom : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                    <div class="col-lg-12">
                        {{ form_widget(form.nom,{'attr':{'class':'form-control','placeholder':'Nom de l\'étudiant'}}) }}
                    </div>

                    <div class="col-lg-12 text-danger">
                        {{ form_errors(form.nom) }}
                    </div>

                </div>

                <div class="form-group col-lg-6">

                    {{ form_label(form.prenom,"Prénom : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                    <div class="col-lg-12">
                        {{ form_widget(form.prenom,{'attr':{'class':'form-control','placeholder':'Prénom de l\'étudiant'}}) }}
                    </div>

                    <div class="col-lg-12 text-danger">
                        {{ form_errors(form.prenom) }}
                    </div>

                </div>

                <div class="form-group col-lg-6">

                    {{ form_label(form.sexe,"Sexe : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                    <div class="col-lg-12">
                        {{ form_widget(form.sexe,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <div class="col-lg-12 text-danger">
                        {{ form_errors(form.sexe) }}
                    </div>

                </div>


                <div class="form-group col-lg-6">

                    {{ form_label(form.email,"Email : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                    <div class="col-lg-12">
                        {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email à filtrer'}}) }}
                    </div>

                    <div class="col-lg-12 text-danger">
                        {{ form_errors(form.email) }}
                    </div>

                </div>

                <div class="form-group col-lg-6">

                    {{ form_label(form.abonnementEtat,"Abonnement : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                    <div class="col-lg-12">
                        {{ form_widget(form.abonnementEtat,{'attr':{'class':'form-control'}}) }}
                    </div>

                    <div class="col-lg-12 text-danger">
                        {{ form_errors(form.abonnementEtat) }}
                    </div>

                </div>

                <div class="form-group col-lg-6">

                    {{ form_label(form.pays,"Pays : ",{'label_attr' : {'class': 'col-lg-12 control-label'}}) }}

                    <div class="col-lg-12">
                        {{ form_widget(form.pays,{'attr':{'class':'form-control','placeholder':''}}) }}
                    </div>

                    <div class="col-lg-12 text-danger">
                        {{ form_errors(form.pays) }}
                    </div>

                </div>


                <div class="form-group col-lg-12">

                    <p class="text-center" style="cursor: pointer;">
                        {{ form_widget(form.Filtrer,{'attr':{'class':'btn btn-info btn-sm col-lg-6 col-lg-offset-3'}}) }}
                    </p>

                </div>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>



</div>